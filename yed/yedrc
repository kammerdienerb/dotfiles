set chatty-kathy-server              "com1635.eecs.utk.edu"
set chatty-kathy-client-autoconnect  "yes"
set macro-instant-playback           "yes"
set go-menu-persistent-items         ".yedrc build.sh"
set completer-sources                "word tags"
